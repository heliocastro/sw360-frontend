{
	"name": "sw360-frontend",
	"version": "0.0.1",
	"description": "sw360 Svelte based modern frontend",
	"private": true,
	"homepage": "https://hithub.com/heliocastro/sw360-frontend",
	"license": "EPL-2.0",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --jsconfig ./jsconfig.json --watch",
		"format": "prettier --write ./src/**/*.{svelte,ts,js} ./*.{ts,js}",
		"lint": "eslint ./src/**/*.{svelte,ts,js} --ignore-path .gitignore .",
		"lint:fix": "eslint --fix ./src/**/*.{svelte,ts,js} --ignore-path .gitignore ."
	},
	"devDependencies": {
		"@poppanator/sveltekit-svg": "^0.3.1",
		"@sveltejs/adapter-auto": "^1.0.0-next.33",
		"@sveltejs/kit": "^1.0.0-next.297",
		"@types/cookie": "^0.4.1",
		"@typescript-eslint/eslint-plugin": "^5.17.0",
		"@typescript-eslint/parser": "^5.17.0",
		"autoprefixer": "^10.4.2",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"marked": "^4.0.12",
		"postcss": "^8.4.6",
		"postcss-load-config": "^3.1.4",
		"postcss-nested": "^5.0.6",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"request": "^2.88.2",
		"sass": "^1.49.9",
		"svelte": "^3.44.0",
		"svelte-check": "^2.4.6",
		"svelte-preprocess": "^4.10.1",
		"tailwindcss": "^3.0.22",
		"tslib": "^2.3.1",
		"typescript": "^4.6.3",
		"uuid": "^8.3.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/fira-mono": "^4.5.0",
		"cookie": "^0.4.1",
		"cssnano": "^5.1.5",
		"gridjs": "^5.0.2",
		"gridjs-svelte": "^2.1.0",
		"node-fetch": "^3.2.1",
		"node-sass": "^7.0.1",
		"svelte-i18n": "^3.3.13"
	}
}
